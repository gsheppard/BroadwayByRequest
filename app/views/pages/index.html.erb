<%= link_to "Musical List", musicals_path %>

<h1>Performance List</h1>

<table border="1">
  <tr>
    <th>Date</th>
    <th>Location</th>
    <th></th>
  </tr>

  <% @performances.each do |performance| %>
    <tr>
      <td><%= performance.date %></td>
      <td><%= performance.location %></td>
      <td><%= link_to "Go to", performance_path(performance) %>
    </tr>
  <% end %>
</table>

<br>
