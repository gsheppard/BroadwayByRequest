<h1>Performance Info</h1>

<table>
  <tr>
    <th>Location</th>
    <th>Date</th>
  </tr>
  <tr>
    <td><%= @performance.location %></td>
    <td><%= @performance.clean_time %></td>
  </tr>
</table>

<h3>Set List</h3>

<table>
  <tr>
    <th>Song</th>
    <th>Musical</th>
    <th>Performer(s)</th>
    <th></th>
    <th></th>
  </tr>

  <% @performance.songs.each do |song| %>
    <tr>
      <td><%= song.name %></td>
      <td><%= song.musical.name %></td>
      <td>
      <% @performance.song_actors(song).each do |actor| %>
        <%= actor.full_name %><br>
      <% end %>
      </td>
      <td><%= link_to "Remove", performance_set_list_path(@performance, @performance.find_set_list(song)), method: :delete %></td>
      <td><%= link_to "Add Singers", new_performance_set_list_cast_path(@performance, @performance.find_set_list(song)) %></td>

    </tr>
  <% end %>
</table>

<br>
<%= link_to "Add Set Item", new_performance_set_list_path(@performance) %>

<br><br>
<%= link_to "Edit", edit_performance_path(@performance) %>
<%= link_to "Remove", performance_path, method: :delete %>
